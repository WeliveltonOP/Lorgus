<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Lorgus - login</title>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed|Roboto+Mono|Roboto+Slab|Roboto:400,400i,500,500i,700,700i" rel="stylesheet">


    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">


    <link rel="shortcut icon" href="~/images/logo_min.png" type="image/x-icon">
    <link rel="stylesheet" href="~/css/style.css">

    <link rel="stylesheet" href="~/css/bootstrap.min.css">

    <style>
        .mdl-layout {
            align-items: center;
            justify-content: center;
        }

        .mdl-layout__content {
            padding: 24px;
            flex: none;
        }

        .mdl-card {
            border-radius: 10px !important;
        }
    </style>
</head>
<body>

    <div class="mdl-layout mdl-js-layout mdl-color--grey-100">
        <main class="mdl-layout__content">
            <div class="mdl-card mdl-shadow--6dp p-5">
                <div class="mdl-card__title mdl-color-text--white justify-content-center">
                    <img src="~/images/logo.png" width="125" alt="Logo" />
                </div>
                <form action="@Url.Action("Login", "Account")" method="post">
                    <div class="mdl-card__supporting-text w-100">
                        <div class="row form-group">
                            <div class="col-md-12 mb-3 mb-md-0">
                                <label class="text-black" for="femail">Email</label>
                                <input required type="text" id="femail" name="email" class="form-control">
                            </div>
                        </div>

                        <div class="row form-group">
                            <div class="col-md-12 mb-3 mb-md-0">
                                <label class="text-black" for="fpassword">Senha</label>
                                <input required type="password" id="fpassword" name="password" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="mdl-card__actions mdl-card--border">
                        <button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">Entrar</button>
                        <br />
                        <a class="nav-link" style="font-size:13px" href="@Url.Action("RecoverPassword", "Account")">Esqueceu a senha?</a>
                    </div>
                </form>
            </div>
        </main>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

    <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>


</body>
</html>